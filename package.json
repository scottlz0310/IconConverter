{
  "name": "iconconverter-electron",
  "version": "1.0.0",
  "description": "Desktop application for converting images to ICO format",
  "main": "electron/main.js",
  "type": "commonjs",
  "author": "IconConverter Team",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:electron\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "npm run build:frontend && npm run build:electron",
    "build:frontend": "cd frontend && npm run build",
    "build:electron": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "package": "npm run build && electron-builder --publish never",
    "package:all": "npm run build && electron-builder -mwl --publish never",
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "electron-updater": "^6.3.9",
    "sharp": "^0.33.5",
    "winreg": "^1.2.5"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "electron": "^35.0.0",
    "electron-builder": "^25.1.8",
    "wait-on": "^8.0.1"
  }
}
